@model MediaTech.ViewModel.SKPLUViewModel

<form action="/api/skplu/insert" class="form form-horizontal" id="form-input">
    <div class="modal-header">
        <h5 class="modal-title">Input Detail SKPLU</h5>
    </div>
    <div class="modal-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <label asp-for="Name" class="control-label col-md-6"></label>
            <input asp-for="Name" class="form-control col-md-6" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Address" class="control-label col-md-6"></label>
            <input asp-for="Address" class="form-control col-md-6" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="StartTime" class="control-label col-md-6"></label>
            <input asp-for="StartTime" class="form-control col-md-6" type="time" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="EndTime" class="control-label col-md-6"></label>
            <input asp-for="EndTime" class="form-control col-md-6" type="time" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Interval" class="control-label col-md-6"></label>
            <input asp-for="Interval" class="form-control col-md-6" type="number" />
            <span asp-validation-for="Interval" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-md-6"><label asp-for="Status"></label></div>
            <div class="col-md-6">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" asp-for="Status" checked="checked">
                    <label class="form-check-label" for="gridCheck">Active</label>
                </div>
            </div>
        </div>
        <div class="form-check">
            
            
        </div>

    </div>
    <div class="modal-footer">
        <input type="submit" value="Save" class="btn btn-primary" />
        <button type="button" class="btn btn-bg-dark text-white" id="btn-cancel">Cancel</button>
    </div>
</form>
@await Html.PartialAsync("_ValidationScriptsPartial");