@model IEnumerable<MediaTech.ViewModel.SPKLUViewModel>

@{
    ViewData["Title"] = "SPKLU Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid col-md-12 mt-n20">
    <div id="alert"></div>
    <div class="card">
        <div class="d-flex justify-content-between card-header">
            <h2>Dashboard SPKLU Management</h2>
            <button type="button" class="btn btn-primary btn-sm" id="btn-add" style="width:80px">Add</button>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered" id="tb_detail">
                <thead>
                    <tr>
                        <th>
                            No
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SPKLUName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CreatedBy)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsACType)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Alamat)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="list-data">
                    @await Html.PartialAsync("_List", Model);
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="modal-input" role="dialog">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">

        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            
        });
        function loadData() {
            $.ajax({
                url: '@Url.Action("List")',
                dataType: 'html',
                type: 'get',
                success: function (x) {
                    $("#list-data").html(x);
                }
            });
        }
        $("#btn-add").click(function () {
            $.ajax({
                url: '@Url.Action("Add")',
                dataType: 'html',
                type: 'get',
                success: function (x) {
                    $("#modal-input").find(".modal-dialog").removeClass("modal-sm");
                    $("#modal-input").find(".modal-dialog").addClass("modal-lg");
                    $("#modal-input").find(".modal-content").html(x);
                    $("#modal-input").modal('show');
                }
            });
        });
        $("#list-data").on("click", "#btn-detail", function () {
            $.ajax({
                url: '@Url.Action("Details")',
                dataType: 'html',
                type: 'get',
                data: { id: $(this).val() },
                success: function (x) {
                    $("#modal-input").find(".modal-dialog").removeClass("modal-sm");
                    $("#modal-input").find(".modal-dialog").addClass("modal-lg");
                    $("#modal-input").find(".modal-content").html(x);
                    $("#modal-input").modal('show');
                }
            });
        });
        $("#list-data").on("click", "#btn-edit", function () {
            $.ajax({
                url: '@Url.Action("Edit")',
