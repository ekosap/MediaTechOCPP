@model MediaTech.ViewModel.SPKLUViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row ml-10 mt-n20 card col-md-6">
    <div class="card-body">
        <h5 class="card-title">Details</h5>
        <div class="form-group row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.SPKLUName)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.SPKLUName)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.Status)
            </div>
            <div class="col-md-6">
                @(Model.Status ? "Active" : "Non-Active")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.IsACType)
            </div>
            <div class="col-md-6">
                @(Model.IsACType? "AC Type" : "DC Type")
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-6">
                @Html.DisplayNameFor(model => model.Alamat)
            </div>
            <div class="col-md-6">
                @Html.DisplayFor(model => model.Alamat)
            </div>
        </div>
        <div class="col-md-12">
            <a asp-action="Index" class="btn btn-dark text-white">Back to List</a>
        </div>
    </div>
</div>
