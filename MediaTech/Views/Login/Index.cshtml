@model MediaTech.ViewModel.UserViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="d-flex flex-column flex-root">
    <!--begin::Login-->
    <div class="login login-4 login-signin-on d-flex flex-row-fluid" id="kt_login">
        <div class="d-flex flex-center flex-row-fluid bgi-size-cover bgi-position-top bgi-no-repeat">
            <div class="login-form text-center p-7 position-relative overflow-hidden">
                <!--begin::Login Header-->
                <div class="d-flex flex-center mb-15">
                    <a>
                        <img src="http://209.97.174.250/images/logo_pertamina.png" class="max-h-75px" alt="" />
                    </a>
                </div>
                <!--end::Login Header-->
                <!--begin::Login Sign in form-->
                <div class="login-signin">

                    <div class="mb-20">
                        <h3>Sign In To Equipment Readiness</h3>
                        <div class="text-muted font-weight-bold">Enter your details to login to your account:</div>
                    </div>
                    <form class="form" id="form-login" method="post">
                        
                        
                        <div class="form-group mb-5">
                            <input asp-for="Email" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Email" autocomplete="off" />
                            <span asp-validation-for="Email" class="offset-4 col-8 text-danger"></span>
                           
                        </div>
                        <div class="form-group mb-5">
                            <input asp-for="Password" type="password" class="form-control h-auto form-control-solid py-4 px-8" placeholder="Password"/>
                            
                        </div>
                        <div class="form-group d-flex flex-wrap justify-content-between align-items-center">
                            <div class="checkbox-inline">
                                <label class="checkbox m-0 text-muted">
                                    <input type="checkbox" name="remember" />
                                    <span></span>
                                    Remember me
                                </label>
                            </div>

                        </div>
                        <button type="submit" 
                                class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-4">
                            Sign In
                        </button>
                    </form>
                </div>
                <!--end::Login Sign in form-->
               
            </div>
        </div>
    </div>
    <!--end::Login-->
</div>



@section Scripts{
    <script>
        $('#form-login').submit(function () {
            var data = $(this).serialize();
            $.ajax({
                url: '@Url.Action("Index","Login")',
                dataType: 'json',
                type: 'post',
                data: data,
                success: function (x) {
                    if (x.success == true) {
                        window.location.href = "@Url.Action("AdminIndex","User")"
                    }
                    else {
                        window.location.href="@Url.Action("Index","Login")"
                    }
                }
            });
            return false;
            
        })
    </script>
}
